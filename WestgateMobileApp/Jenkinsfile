pipeline {
    agent any

    options {
        timestamps()
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Verify Environment') {
            steps {
                sh 'java -version || true'
                sh 'node -v || true'
                sh 'npm -v || true'
            }
        }

        stage('Build') {
            steps {
                echo 'Pipeline syntax validated successfully.'
            }
        }
    }
}
